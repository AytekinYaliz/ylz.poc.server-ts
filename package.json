{
  "name": "server",
  "description": "",
  "version": "1.0.0",
  "private": true,
  "author": "",
  "engines": {
    "node": "8.0.0 || 6.x.x",
    "npm": "3.7.3"
  },
  "scripts": {
    "start": "tsc-watch --project . --outDir ./dist --onSuccess \"npm run nodemon\"",
    "prenodemon": "npm run copy-static-assets",
    "nodemon": "nodemon ./dist/server.js",
    "build": "tsc",
    "postbuild": "npm run copy-static-assets",
    "test": "jest --forceExit",
    "test:w": "jest --forceExit --watch",
    "publish": "node ./dist/server.js",
    "publish-dev": "cross-env NODE_ENV=dev npm run publish",
    "publish-uat": "cross-env NODE_ENV=uat npm run publish",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "doc": "./node_modules/.bin/typedoc -options ./typedoc.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "dependencies": {
    "axios": "0.16.2",
    "body-parser": "1.17.2",
    "cors": "2.8.1",
    "errorhandler": "1.5.0",
    "express": "4.15.3",
    "mongodb": "^2.2.30",
    "mongoose": "4.11.3",
    "morgan": "1.8.1",
    "socket.io": "2.0.3"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.3",
    "@types/cors": "2.8.1",
    "@types/errorhandler": "0.0.30",
    "@types/express": "4.0.35",
    "@types/jest": "19.2.3",
    "@types/mongoose": "4.7.19",
    "@types/morgan": "1.7.32",
    "@types/node": "7.0.18",
    "@types/request": "0.0.44",
    "@types/request-promise": "4.1.33",
    "@types/socket.io": "1.4.29",
    "cross-env": "5.0.0",
    "jest": "20.0.3",
    "nodemon": "1.11.0",
    "npm-run-all": "4.1.2",
    "ts-jest": "20.0.4",
    "tsc-watch": "1.0.17",
    "tslint": "5.2.0",
    "typedoc": "0.7.1",
    "typescript": "2.4.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/types"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
