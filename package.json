{
  "name": "server",
  "description": "",
  "version": "1.0.0",
  "private": true,
  "author": "",
  "engines": {
      "node": "8.0.0 || 6.x.x",
      "npm": "3.7.3"
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "npm run build && npm run watch",
    "build": "tsc",
    "build:watch": "tsc -w",
    "test": "jest --forceExit",
    "test:watch": "jest --forceExit --watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run build:watch\" \"nodemon dist/server.js\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "doc": "./node_modules/.bin/typedoc -options ./typedoc.json",
    "copy-static-assets": "node copyStaticAssets.js"
  },
  "dependencies": {
    "body-parser": "1.17.2",
    "cors": "2.8.1",
    "errorhandler": "1.5.0",
    "express": "4.15.3",
    "morgan": "1.8.1",
    "request": "2.81.0",
    "xmlhttprequest": "1.8.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.3",
    "@types/cors": "2.8.1",
    "@types/errorhandler": "0.0.30",
    "@types/express": "4.0.35",
    "@types/jest": "19.2.3",
    "@types/morgan": "1.7.32",
    "@types/node": "7.0.18",
    "@types/request": "0.0.43",
    "@types/request-promise": "4.1.33",
    "concurrently": "3.4.0",
    "jest": "20.0.3",
    "nodemon": "1.11.0",
    "ts-jest": "20.0.4",
    "tslint": "5.2.0",
    "typedoc": "0.7.1",
    "typescript": "2.3.3"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/types"
    ],
    "coverageThreshold": {
      "global": {
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
